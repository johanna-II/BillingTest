{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  "pip_requirements": {
    "fileMatch": ["(^|/)requirements[\\w-]*\\.txt$"]
  },
  "pip_setup": {
    "fileMatch": ["(^|/)setup\\.py$", "(^|/)setup\\.cfg$"]
  },
  "poetry": {
    "fileMatch": ["(^|/)pyproject\\.toml$"]
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "labels": ["major-update"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr",
      "labels": ["minor-update"]
    },
    {
      "matchPackagePatterns": ["^pytest"],
      "groupName": "pytest packages",
      "schedule": ["before 3am on Monday"]
    },
    {
      "matchPackagePatterns": ["^mypy", "^ruff", "^black"],
      "groupName": "linting tools",
      "schedule": ["before 3am on Monday"]
    },
    {
      "matchPackagePatterns": ["^opentelemetry"],
      "groupName": "OpenTelemetry packages",
      "schedule": ["before 3am on Monday"]
    },
    {
      "matchPackagePatterns": ["^flask"],
      "groupName": "Flask packages",
      "schedule": ["before 3am on Monday"]
    },
    {
      "matchDatasources": ["npm"],
      "groupName": "frontend dependencies",
      "schedule": ["before 3am on Tuesday"]
    }
  ],
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "rangeStrategy": "auto",
  "labels": ["dependencies", "renovate"],
  "assignees": [],
  "reviewers": [],
  "timezone": "Asia/Seoul",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}
