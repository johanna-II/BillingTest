{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor",
    "schedule:weekly"
  ],
  "pip_requirements": {
    "managerFilePatterns": [
      "/(^|/)requirements[\\w-]*\\.txt$/"
    ]
  },
  "pip_setup": {
    "managerFilePatterns": [
      "/(^|/)setup\\.py$/",
      "/(^|/)setup\\.cfg$/"
    ]
  },
  "poetry": {
    "managerFilePatterns": [
      "/(^|/)pyproject\\.toml$/"
    ]
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "major-update"
      ]
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "labels": [
        "minor-update"
      ]
    },
    {
      "groupName": "pytest packages",
      "schedule": [
        "before 3am on Monday"
      ],
      "matchPackageNames": [
        "/^pytest/"
      ]
    },
    {
      "groupName": "linting tools",
      "schedule": [
        "before 3am on Monday"
      ],
      "matchPackageNames": [
        "/^mypy/",
        "/^ruff/",
        "/^black/"
      ]
    },
    {
      "groupName": "OpenTelemetry packages",
      "schedule": [
        "before 3am on Monday"
      ],
      "matchPackageNames": [
        "/^opentelemetry/"
      ]
    },
    {
      "groupName": "Flask packages",
      "schedule": [
        "before 3am on Monday"
      ],
      "matchPackageNames": [
        "/^flask/"
      ]
    },
    {
      "matchDatasources": [
        "npm"
      ],
      "groupName": "frontend dependencies",
      "schedule": [
        "before 3am on Tuesday"
      ]
    }
  ],
  "prConcurrentLimit": 5,
  "prCreation": "immediate",
  "rangeStrategy": "auto",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assignees": [],
  "reviewers": [],
  "timezone": "Asia/Seoul",
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
